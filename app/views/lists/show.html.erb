<div class="banner">
  <div class="container">
    <h1 class="list-title"><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="card card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
          <div class="card-body">
            <h4 class="card-title"><%= bookmark.movie.title %></h4>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="rating"><i class="fas fa-star"></i> <%= bookmark.movie.rating %>/10</p>
            <p class="card-text"><%= bookmark.comment %></p>
            <%= link_to '+', bookmark_path(bookmark), class: 'card-remove-link', data: { turbo_method: :delete, turbo_confirm: 'Are you sure ?'} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Back to the lists', lists_path, class: 'btn btn-secondary mt-3' %>
<%= link_to 'Add movies', new_list_bookmark_path(@list), class: 'btn btn-primary mt-3' %>
