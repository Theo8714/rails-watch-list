
<div class="container text-center">
  <h1>Add Bookmark</h1>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= simple_form_for [@list, @bookmark], html: { class: 'form-group' } do |f| %>
        <div class="form-group">
          <%= f.input :comment, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.association :movie, collection: Movie.all, label_method: :title, value_method: :id, include_blank: true, class: 'form-control' %>
        </div>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<div class="container text-center mt-3">
  <%= link_to "Back to list", list_path(@list), class: 'btn btn-secondary' %>
</div>
